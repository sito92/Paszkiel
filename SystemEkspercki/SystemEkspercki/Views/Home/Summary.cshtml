
@model SystemEkspercki.Models.SummaryViewModel

@{
    ViewBag.Title = "Summary";
}

<h2>Podsumowanie:</h2>

Najlepsze laptopy dla Ciebie:
<div class="CSSTableGenerator">
    <table>
        <tr>
            <th>
                Nazwa
            </th>
            <th>
                Opis
            </th>
            <th>
                Cena
            </th>
            <th>
                Specyfikacja
            </th>
            <th>
                Kup
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.OrderedLaptops)
        {
            if (Model.OrderedLaptops.IndexOf(item) == 0)
            {
                <tr>
                    <td id="bestLaptop">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td id="bestLaptop">
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td id="bestLaptop">
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td id="bestLaptop">
                        <a href="@Html.DisplayFor(modelItem => item.Name)">Zobacz pełną specyfikację</a>
                    </td>
                    <td id="bestLaptop">
                        <a href="http://www.ceneo.pl/;szukaj-@Html.DisplayFor(modelItem => item.Name)">Wyszukaj w Ceneo</a>
                    </td>
                </tr>
            }
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a href="@Html.DisplayFor(modelItem => item.Name)">Zobacz pełną specyfikację</a>
                </td>
                <td>
                    <a href="http://www.ceneo.pl/;szukaj-@Html.DisplayFor(modelItem => item.Name)">Wyszukaj w Ceneo</a>
                </td>
            </tr>
        }

    </table>
</div>
@if (Model.ActualLimit < Model.MaxLimit)
{
    <a href="@Url.Action("Summary", "Home", new {limit = Model.ActualLimit*2})">
        <div id="button">Pokaż więcej</div>
    </a>
}
